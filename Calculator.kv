#kivy.require("1.9.0")

<Button>:
    size_hint: 0.26,0.2
    font_size:25

<CalcScreen>:

    size_hint: (1.05, 0.2)
    multiline: False
    font_size: "30"
    pos_hint: {"x":0, "top":1.05}



<CalculatorBody>:
    id: Calculator
    size_hint: 0.95,0.95

    CalcScreen:
        text:"Tap screen to clear"
        id: Screen
        on_touch_down: self.text=""

    Button:
        text: "7"
        pos_hint: {"x":0, "top":0.835}
        on_release: Screen.text += self.text
    Button:
        text: "8"
        pos_hint: {"x":0.2625, "top":0.835}
        on_release: Screen.text += self.text
    Button:
        text: "9"
        pos_hint: {"x":0.525, "top":0.835}
        on_release: Screen.text += self.text
    Button:
        text: "+"
        pos_hint: {"x":0.7875, "top":0.835}
        background_color: 2,0,0,2
        on_release: Screen.text += self.text
    Button:
        text: "4"
        pos_hint: {"x":0, "top":0.63}
        on_release: Screen.text += self.text
    Button:
        text: "5"
        pos_hint: {"x":0.2625, "top":0.63}
        on_release: Screen.text += self.text
    Button:
        text: "6"
        pos_hint: {"x":0.525, "top":0.63}
        on_release: Screen.text += self.text
    Button:
        text: "-"
        pos_hint: {"x":0.7875, "top":0.63}
        background_color: 2,0,0,2
        on_release: Screen.text += self.text
    Button:
        text: "1"
        pos_hint: {"x":0, "top":0.425}
        on_release: Screen.text += self.text
    Button:
        text: "2"
        pos_hint: {"x":0.2625, "top":0.425}
        on_release: Screen.text += self.text
    Button:
        text: "3"
        pos_hint: {"x":0.525, "top":0.425}
        on_release: Screen.text += self.text
    Button:
        text: "x"
        pos_hint: {"x":0.7875, "top":0.425}
        background_color: 2,0,0,2
        on_release: Screen.text += "*"
    Button:
        text: "0"
        pos_hint: {"x":0, "top":0.22}
        on_release: Screen.text += self.text
    Button:
        text: "."
        pos_hint: {"x":0.2625, "top":0.22}
        on_release: Screen.text += self.text
    Button:
        text: "="
        pos_hint: {"x":0.525, "top":0.22}
        background_color: 0,0,2,2
        on_release: Screen.text = Calculator.calc(Screen.text)
    Button:
        text: "/"
        pos_hint: {"x":0.785, "top":0.22}
        background_color: 2,0,0,2
        on_release: Screen.text += self.text
